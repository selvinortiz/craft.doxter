<?xml version="1.0" encoding="UTF-8"?>

<phpunit
	colors="true"
	backupGlobals="false"
	backupStaticAttributes="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="true"

	bootstrap="bootstrap.php">

	<testsuites>
		<testsuite>
			<directory>./</directory>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<directory suffix=".php">../doxter</directory>
			<exclude>
				<directory>../doxter/resources</directory>
				<directory>../doxter/templates</directory>
				<directory>../doxter/common/parsedown</directory>
			</exclude>
		</whitelist>
	</filter>
</phpunit>
